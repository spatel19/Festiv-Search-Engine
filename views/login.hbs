{{#if error}}
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span> {{error}}
  </div>
{{/if}}
<div class="parallax-container valign-wrapper">
  <div class="container">
    <br><br>
    <center>
      <form id="form" method="post" action="/login">
        <div class="divBox">
          <input type='text' name="username" placeholder="Username" class="row center">
        </div>
        <div class="divBox" id="password">
          <input name="password" type='password' placeholder="Password" class='row center'>
        </div>
        <div id="LoginBtn" class="row center">
          <button class="btn waves-effect waves-light brown" type="submit">Submit<i class="material-icons right">send</i>
          </button>
        </div>
      </form>
      <a class="btn btn-primary" href="/signup">Register</a>
    </center>
  </div>
  <br><br>

  <div class="parallax"><img src="../images/man-sunglasses-art-graffiti.jpg" alt="Unsplashed login background img"></div>
</div>

